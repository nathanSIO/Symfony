<h3>Liste des employés :</h3>

{% if lesEmployes is defined %}
    
     <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Statut</th>
                <th></th>
            </tr>
        </thead>
        {% for employe in lesEmployes %}
            <tbody>
                    <tr>
                        <td>{{employe.nom}}</td>
                        <td>{{employe.prenom }}</td>
                        <td>{{employe.statut}}</td>
                        <td><a class="btn btn-outline-warning" href="{{path('app_affiche_inscription_employe', {'id': employe.id})}}">Afficher ses inscriptions</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
{% else %}
    <p>Aucune inscriptions en attente !</p>
{% endif %}

